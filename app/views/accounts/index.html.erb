<div class="grid-x grid-padding-x">
  <div class="cell medium-offset-1 medium-10 large-offset-2 large-8">

    <h3>Accounts</h3>

    <br/>

    <table class="hover">
      <thead>
        <tr>
          <th>Code</th>
          <th>Type Mask</th>
          <th>Full Name</th>
          <th>Short Name</th>
          <th>Balance</th>
          <th>Is Positive</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @accounts.each do |account| %>
          <tr>
            <td><%= account.code %></td>
            <td><%= account.type_mask %></td>
            <td><%= account.full_name %></td>
            <td><%= account.short_name %></td>
            <td><%= account.balance %></td>
            <td><%= account.is_positive %></td>
            <td>
              <div class="button-group">
                <%= link_to 'Show', account, class: "button" %>
                <%= link_to 'Edit', edit_account_path(account), class: "button warning" %>
                <%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' }, class: "button alert" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Account', new_account_path, class: "button secondary" %>

  </div>
</div>

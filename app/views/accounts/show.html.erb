<h3>Account</h3>

<br/>

<div class="callout">
  <p>
    <strong>Code:</strong>
    <%= @account.code %>
  </p>

  <p>
    <strong>Type:</strong>
    <%= @account.account_type.to_s.humanize %>
  </p>

  <p>
    <strong>Full Name:</strong>
    <%= @account.full_name %>
  </p>

  <p>
    <strong>Short Name:</strong>
    <%= @account.short_name %>
  </p>

  <p>
    <strong>Balance:</strong>
    <%= @account.balance %>
  </p>

  <p>
    <strong>Sign:</strong>
    <%= @account.is_positive ? "plus (+)" : "minus (-)" %>
  </p>
</div>

<div class="button-group">
  <%= link_to '<< Back', accounts_path, class: "button secondary" %>
  <%= link_to 'Edit', edit_account_path(@account), class: "button warning" %>
</div>

<div class="top-bar" data-sticky data-margin-top="0">
  <div class="top-bar-left">
    <ul class="dropdown menu" data-dropdown-menu>
      <li class="menu-text">CUIS</li>
      <% if user_signed_in? %>
        <li>
          <%= link_to "Credit Unions", credit_unions_path %>
          <ul class="menu vertical">
            <li>
              <%= link_to "New Credit Union", new_credit_union_path %>
            </li>
          </ul>
        </li>
        <li>
          <%= link_to "Branches", branches_path %>
          <ul class="menu vertical">
            <li>
              <%= link_to "New Branch", new_branch_path %>
            </li>
          </ul>
        </li>
        <li>
          <a>Products</a>
          <ul class="menu vertical">
            <li>
              <%= link_to "Share Products", share_products_path %>
            </li>
            <li>
              <%= link_to "New Share Product", new_share_product_path %>
            </li>
            <li>
              <%= link_to "Saving Products", saving_products_path %>
            </li>
            <li>
              <%= link_to "New Saving Product", new_saving_product_path %>
            </li>
          </ul>
        </li>
        <li>
          <a>Incomes</a>
          <ul class="menu vertical">
            <li>
              <%= link_to "Sources Of Income", income_sources_path %>
            </li>
            <li>
              <%= link_to "New Income Source", new_income_source_path %>
            </li>
          </ul>
        </li>
        <li>
          <a>Expenses</a>
          <ul class="menu vertical">
            <li>
              <%= link_to "Expense Allocations", expense_allocations_path %>
            </li>
            <li>
              <%= link_to "New Exp. Allocation", new_expense_allocation_path %>
            </li>
          </ul>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="top-bar-right">
    <ul class="dropdown menu" data-dropdown-menu>
      <% if user_signed_in? %>
        <li>
          <%= link_to "Users", users_path %>
          <ul class="menu vertical">
            <li>
              <%= link_to "New User", new_user_path %>
            </li>
          </ul>
        </li>
        <li>
          <a><%= current_user.username %></a>
          <ul class="menu vertical">
            <li>
              <%= link_to('Sign out', destroy_user_session_path, method: :delete) %>
            </li>
          </ul>
        </li>
      <% else %>
        <li>
          <%= link_to('Sign in', new_user_session_path)  %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

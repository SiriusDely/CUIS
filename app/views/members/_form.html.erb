<%= form_with(model: member, local: true) do |form| %>
  <% if member.errors.any? %>
    <div id="error_explanation" class="callout alert">
      <h5><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h5>

      <ul>
      <% member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, id: :member_first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, id: :member_last_name %>
  </div>

  <div class="field">
    <%= form.label :birth_place %>
    <%= form.text_field :birth_place, id: :member_birth_place %>
  </div>

  <div class="field">
    <%= form.label :birth_date %>
    <%= form.date_select :birth_date, id: :member_birth_date %>
  </div>

  <div class="field">
    <%= form.label :credit_union_id %>
    <%= form.collection_select :credit_union_id, @credit_unions, :id, :short_name, {include_blank: true} %>
  </div>

  <div class="field">
    <%= form.label :branch_id %>
    <%= form.collection_select :branch_id, @branches, :id, :short_name, {include_blank: true} %>
  </div>

  <div class="actions">
    <%= form.submit class: "button expanded" %>
  </div>
<% end %>

<h3>Saving Account</h3>

<br/>

<div class="callout">
  <p>
    <strong>Number:</strong>
    <%= @saving_account.number %>
  </p>

  <p>
    <strong>Balance:</strong>
    <%= @saving_account.balance %>
  </p>

  <p>
    <strong>Interest Rate:</strong>
    <%= @saving_account.interest_rate %>
  </p>

  <p>
    <strong>Saving Product:</strong>
    <%= @saving_account.saving_product.short_name %>
  </p>

  <p>
    <strong>Member:</strong>
    <%= @saving_account.member.first_name %>
  </p>

</div>

<div class="button-group">
  <%= link_to '<< Back', saving_accounts_path, class: "button secondary" %>
  <%= link_to 'Edit', edit_saving_account_path(@saving_account), class: "button warning" %>
</div>

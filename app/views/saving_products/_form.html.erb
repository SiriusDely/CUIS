<%= form_with(model: saving_product, local: true) do |form| %>
  <% if saving_product.errors.any? %>
    <div id="error_explanation" class="callout alert">
      <h5><%= pluralize(saving_product.errors.count, "error") %> prohibited this saving_product from being saved:</h5>

      <ul>
      <% saving_product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :full_name %>
    <%= form.text_field :full_name, id: :saving_product_full_name %>
  </div>

  <div class="field">
    <%= form.label :short_name %>
    <%= form.text_field :short_name, id: :saving_product_short_name %>
  </div>

  <div class="field">
    <%= form.label :interest_rate %>
    <%= form.text_field :interest_rate, id: :saving_product_interest_rate %>
  </div>

  <div class="field">
    <%= form.label :credit_union_id %>
    <%= form.collection_select :credit_union_id, @credit_unions, :id, :short_name, {include_blank: true} %>
  </div>

  <div class="actions">
    <%= form.submit class: "button expanded" %>
  </div>
<% end %>
